export const getStaticProps: GetStaticProps = async () => {
  const docsDirectory = path.join(process.cwd(), 'docs')
  
  let posts: BlogPost[] = []
  
  try {
    const filenames = fs.readdirSync(docsDirectory)
    const markdownFiles = filenames.filter(name => name.endsWith('.md'))

    posts = markdownFiles.map(filename => {
      const filePath = path.join(docsDirectory, filename)
      const fileContents = fs.readFileSync(filePath, 'utf8')
      const { data, content } = matter(fileContents)

      // ä»æ–‡ä»¶åç”Ÿæˆslug
      const slug = filename.replace(/\.md$/, '')

      // ç”Ÿæˆæ‘˜è¦ï¼ˆå–å†…å®¹å‰150ä¸ªå­—ç¬¦ï¼‰
      const excerpt = content
        .replace(/^#.*$/gm, '') // ç§»é™¤æ ‡é¢˜
        .replace(/```[\s\S]*?```/g, '') // ç§»é™¤ä»£ç å—
        .replace(/[#*`[\]]/g, '') // ç§»é™¤markdownç¬¦å·
        .trim()
        .substring(0, 150) + '...'

      // è®¡ç®—é˜…è¯»æ—¶é—´ï¼ˆå‡è®¾æ¯åˆ†é’Ÿ200å­—ï¼‰
      const readTime = `${Math.max(1, Math.ceil(content.length / 200 / 5))} åˆ†é’Ÿé˜…è¯»`

      // ä»å†…å®¹æˆ–æ–‡ä»¶åæå–æ ‡ç­¾
      const tags = data.tags || [
        filename.includes('cloud') ? 'äº‘è®¡ç®—' : '',
        filename.includes('optimization') ? 'æ€§èƒ½ä¼˜åŒ–' : '',
        filename.includes('fix') ? 'é—®é¢˜ä¿®å¤' : '',
        'æŠ€æœ¯'
      ].filter(Boolean)

      return {
        slug,
        title: data.title || content.match(/^# (.+)$/m)?.[1] || slug,
        excerpt,
        date: data.date || new Date().toLocaleDateString('zh-CN'),
        readTime,
        tags,
        content
      }
    })

    // æŒ‰æ—¥æœŸæ’åº
    posts.sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime())
  } catch (error) {
    console.log('æ— æ³•è¯»å–docsç›®å½•ï¼Œè¿”å›ç©ºåˆ—è¡¨')
  }

  return {
    props: {
      posts
    }
  }
}

